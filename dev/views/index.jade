extends ../templates/main

block title 
    title Movie Test APP

block content
    .row.title-content
        h1 Movie Test APP
        h3 By Luis Izquierdo

    .row.login
        .header
            h1.text-center Login
            img.profile-img(src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120", alt="Avatar")

        .body
            form(action="", class="form col-md-12 center-block")
                .form-group
                    input.form-control.input-lg(type="text", placeholder="Enter your email...", required, autofocus)
                .form-group
                    input.form-control.input-lg(type="password", placeholder="Enter your password...",required)
                .form-group
                    button.btn.btn-primary.btn-lg.btn-block Sign In
                    span.pull-right
                        a(href="#") Register Now
                    span.pull-left
                        a(href="#") Forgot your password?
