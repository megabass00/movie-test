.row
    .col-lg-8.col-lg-offset-2.searcher
        .input-group
            span.input-group-addon
                span.glyphicon.glyphicon-film
            input.form-control(type="text", placeholder="Search your movie...", ng-model="textToSearch", autofocus)
            span.input-group-btn
                button.btn.btn-primary(ng-click="searchMovies()") Search
    .col-lg-8.col-lg-offset-2
        span.total-results Total results: {{ totalResults }}
.container.card-container.fadein(ng-show="movies.length > 0")
    .card-movie.col-lg-3.col-md-4.col-sm-6(ng-repeat="movie in movies")
        .poster
            a(href="#/detail/{{ movie.imdbID }}")
                img(src="{{ movie.Poster }}")
        .body
            h3.title.brand-color 
                a(href="#/detail/{{ movie.imdbID }}") {{ movie.Title }}
            p.identifier Identifier
                br
                span {{ movie.imdbID }}
            p.year Year
                br
                span {{ movie.Year }}
            p.year Type
                br
                span {{ movie.Type }}

.container.no-results(ng-show="movies.length <= 0 && !searching") 
    span.glyphicon.glyphicon-remove
    br
    span No Results

.container(ng-show="searching")
    .row.preload
        img(src="img/spiner.svg")



