.row.login
    .header
        .alert.alert-danger(ng-show="error.length > 0") {{ error }}
        h1.text-center
            img.logo(src="./img/logo-2.svg", alt="Logo") 
            span Sign In
        img.profile-img(src="./img/user-default.png", alt="Avatar")
    .body
        form.col-md-12.center-block(ng-submit="login()")
            .form-group
                input.form-control.input-lg(ng-model="username", type="text", placeholder="Enter your email...", required, autofocus)
            .form-group
                input.form-control.input-lg(ng-model="password", type="password", placeholder="Enter your password...", required)
            .form-group
                button.btn.btn-primary.btn-lg.btn-block Sign In
                    span.glyphicon.glyphicon-log-in
                span.pull-left TestApp 
                span.pull-right
                    a(href="https://github.com/megabass00", target="_blank") megabass00